<div class="main-content-container">
   <header class="header-row">
      <h2 class="header-title">Current Basket</h2>
         <div class="table-checkout-price">
            <div class="basket-price">
               <div class="flex-price">
                  <h4 class="currency">Total Value: £</h4>
                  <h4 class="total-value">{{padNumber subTotal}}</h4>
               </div>
            </div>
            <div class="checkout">
                     <button type="submit" class="btn btn-success btn">Checkout</button>
               </div>
         </div>
   </header>
   <div id={{basketId}} class="basket-view">
      
      <ul class="book-list" id="test">
       
         {{#each basketItems}}
         
         <li id={{_id}} class="single-book">
            <div class="book-basket-container">
               <div class="book-cover-basket-wrap">
                  <img class="book-cover-basket" src="{{bookImage}}" alt="book-cover">
               </div>
               <div class="book-info-basket">
                  <div class="book-title-basket">
                     <h4 class="bold-book-info">{{ bookTitle }}</h3>
                  </div>
                  <div class="book-author-basket">
                     <h5>{{ bookAuthor }}</h5>
                     <h5>{{bookType}}</h5>

                  </div>
               </div>
               <div class="book-qty-basket">
                  <form action="#">
                     <label for="quantity">Qty</label>
                     <input type="number" class="qty" id="quantity" name="quantity" value="{{ quantity }}" min="1" max="99" autocomplete="off">
          
                  </form>
               </div>
               <div class="book-basket-price">
                  <h4 class="bold-book-info">Book price</h4>
                  <div class="flex-price">
                  <h5 class="currency">£</h5>
                  <h5 class="bprice" id="book-price">{{padNumber price }}</h5>
                  </div>
               </div>
               <div class="book-basket-subtotal">
               
                  <h4 class="bold-book-info">Sub-total</h4>
                  <div class="flex-price">
                  <h5 class="currency">£</h5>
       
                  <h5 class="subtotal-price" id="subtotal-price">{{padNumber total }}</h5>

                  </div>
                  <form method="POST" action="remove-from-basket/{{bookSkuId}}">
                     <button type="submit" class="btn btn-outline-danger">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2">
                        <polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                        <line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/>
                        </svg>
                     </button>
                  </form>
               </div>
            </div>
         </li>
         
         {{/each}}
         </div>
      </ul>
      
   </div>

</script>