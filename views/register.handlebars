
      <div class="container" id="login-container">
          <div class="login-box">
            <form action="/auth/register" method="POST">
                  <h1 class="h3 mb-3 font-weight-normal">Register</h1>
               <div class="entry" id="entry-form">
                 <label for="username">Username</label>
                  <input type="text" class="form-control" id="username" name="username" placeholder="Username" required autofocus>
                  </div>
                 <div class="entry" id="entry-form">
                   <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" name="email" placeholder="Email Address" required>
                  </div>
                  <div class="entry" id="entry-form">
                  <label for="password">Password</label>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Password" required>
                  </div>
                  <div class="entry" id="entry-form">
                  <label for="passwordConfirm">Confirm Password</label>
                  <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" placeholder="Password" required>
                  </div>
                  <div class="checkbox mb-3" id="checkbox">
                      <label>
                        <input type="checkbox" value="remember-me" id="checkbox">
                        Remember Me?
                      </label>
                  </div>
                  <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button class="btn btn-lg btn-primary btn-block" id="submit-btn" type="submit">Register</button>
              </form>
            {{#if message }}
              <h4 class="alert alert-danger mt-4">{{ message }}</h4>
            {{/if}}
          </div>
      </div>
